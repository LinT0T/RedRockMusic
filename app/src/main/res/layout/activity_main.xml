<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
 >

    <ImageView
        android:id="@+id/img_music"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginLeft="137.5dp"
        android:layout_marginTop="52dp"
        android:layout_marginRight="137.5dp"
        android:src="@mipmap/cloudmusic" />

    <EditText
        android:id="@+id/et_user_name"
        android:layout_width="230dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginLeft="72.5dp"
        android:layout_marginTop="53dp"
        android:layout_marginRight="72.5dp"
        android:background="@mipmap/rectangle2"
        android:hint="账号"
        android:maxHeight="44dp"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:singleLine="true"
        android:textColor="#1C252A"
        android:textColorHint="#A8A8A8" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="230dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@mipmap/rectangle3"
        android:hint="密码"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:singleLine="true"
        android:textColor="#1C252A"
        android:textColorHint="#A8A8A8" />

    <TextView
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="17.5dp"
        android:gravity="center"
        android:text="Forgot your password?"
        android:textColor="#ff758692"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="180dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="23.5dp"
        android:background="@drawable/btn_login"
        android:text="登 录"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="36dp"
        android:background="#F7F8FA"
        android:orientation="vertical">

        <TextView
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24.5dp"
            android:gravity="center"
            android:text="Sign with a social account"
            android:textColor="#ff758692"
            android:textSize="14sp" />

        <Button
            android:layout_width="260dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="24.5dp"
            android:background="@mipmap/facebook" />

        <Button
            android:layout_width="260dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@mipmap/twitter" />

    </LinearLayout>
</LinearLayout>